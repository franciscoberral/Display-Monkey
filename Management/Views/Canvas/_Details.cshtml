@model DisplayMonkey.Models.Canvas

<fieldset>
    <legend>@Resources.Canvas</legend>
        <table><tr>
        <td>

    @Html.HiddenFor(p => p.CanvasId)

    <div class="divTable">
    <div class="divRow">
    <div class="display-field">
        @Html.Label(Model.Name)
        @Html.DisplayFor(model => model.Width) x @Html.DisplayFor(model => model.Height) @Resources.Pixels
    </div>
    </div>
    </div>
        </td>
        <td class="preview">
            <div id="canvas" data-path="@Html.Raw(Url.Action("Data", "Canvas"))">
                <div>
                    <img src="@Html.Raw(Url.Action("Thumb", "Media", new { id="nnn", width="qqq", height="qqq" }))" alt="@Resources.Background" />
                </div>
            </div>
        </td>
    </tr></table>
</fieldset>

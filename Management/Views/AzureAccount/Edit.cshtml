@model DisplayMonkey.Models.AzureAccount

@{
    ViewBag.Title = Resources.EditAzureAccount;
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    @Html.Referrer()

    <fieldset>
        <legend>@Resources.AzureAccount</legend>

        @Html.HiddenFor(model => model.AccountId)

        @Html.Partial("_Edit")

        <p>
            <input type="submit" value="@Resources.Save" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink(Resources.AzureAccounts, "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

@model DisplayMonkey.Models.Video

@{
    ViewBag.Title = Resources.UploadMediaAlternative;
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm("Uplink", "Video", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    @Html.Referrer()

    <fieldset>
        <legend>@Resources.Video</legend>

        @Html.HiddenFor(m => Model.FrameId)
        @Html.Partial("_File", Model)

        <p>
            <input type="submit" value="@Resources.Upload" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink(Resources.BackToDetails, "Details", new { id = Model.FrameId })
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

@model DisplayMonkey.Models.Template

@{
    ViewBag.Title = Resources.CreateNewTemplate;
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    @Html.Referrer()

    <fieldset>
        <legend>@Resources.Template</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.FrameType)
        </div>
        <div class="editor-field select">
            @Html.DropDownListFor(model => model.FrameType, ViewBag.FrameTypes as SelectList)
            @Html.ValidationMessageFor(model => model.FrameType)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Name)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Name)
            @Html.ValidationMessageFor(model => model.Name)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Html)
        </div>
        <div class="editor-field">
            @Html.TextAreaFor(model => model.Html)
            @Html.ValidationMessageFor(model => model.Html)
        </div>

    </fieldset>

    <p>
        <input type="submit" value="@Resources.Create" />
    </p>
}

<div>
    @Html.ActionLink(Resources.ViewTemplates, "Index")
</div>
